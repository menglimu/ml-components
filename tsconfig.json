{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    // 运行通过对象的aa.bb的方式取值
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false, // 允许隐式any
    "strictNullChecks": false, // 不检测null和undefined的赋值
    // "types": ["node"], 引入node的类型定义 在./node_modules/@types 下查找
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": [ "src/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.tsx", "**/*.vue"]
}
